listen {

  listen 80 default_server;

  root {{document_root}};
  index index.php index.html index.htm;

  server_name {{url}};

  location / {
    try_files $uri $uri/ =404;
  }

  error_page 404 /404.html;
  error_page 500 502 503 504 /50x.html;
  location = /50x.html {
    root /usr/share/nginx/html;
  }

}
